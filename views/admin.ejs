<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>crowdsource</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js"></script>
  </head>
  <body>
    <% include ./partials/navbar %>
    <div class="container">
      <br>
      <div class="row">
        <div class="col m8 offset-m2">
          <div class="row center">
            <h3><%= poll.question %></h3><br>
            <% if(poll.endTime) { %>
              <h5>poll will end: <%= poll.endTime %></h5><br>
            <% } %>
            <% if( poll.voteTally ) { %>
              <div id="current-tally">
                <h5>Vote Results</h5><br><br>
                <table class="highlight">
                  <thead>
                    <tr>
                      <th>Choice</th>
                      <th>Votes</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var vote in poll.voteTally) { %>
                      <tr>
                        <td> <%= vote %></td>
                        <td><%= poll.voteTally[vote] %></td>
                      </tr>
                    <% }; %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div id="current-tally">There are currently no votes for your survey.  Check back soon!</div>
            <% } %>
            <div><h5><a href='/poll/<%= poll.id %>'>share your poll with more friends</a></h5></div><br>
            <% if( poll.status === "on" ) { %>
              <div id="close-poll"><button id="close-button" class="btn indigo">End Poll Now</button></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% include ./partials/scripts %>
  </body>
</html>
