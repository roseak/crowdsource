<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>crowdsource</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/css/materialize.min.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" type="text/css" href="/normalize.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.2/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h4 class="center">crowdsource</h4>
      <div class="row">
        <div class="col m8 offset-m2">
          <div class="row center">
            <h3><%= poll.question %></h3><br>
            <div id="close-poll">
              <h5>Choose from the options below:</h5>
              <ul>
              <% poll.responses.forEach(function(response) { %>
                <li id="choices"><button id="<%= poll.id %>" class="btn indigo poll-buttons"><%= response %></button></li>
              <% }); %>
              </ul>
              <div id="current-choice"></div>
            </div>
            <% if(poll.visible === "on") { %>
              <div id="current-tally"></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script src="/jquery.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
  </body>
</html>
